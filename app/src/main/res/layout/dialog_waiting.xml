<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/progressBar1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/OutwardListItemColorReceived"
        android:padding="20dp"
        android:layout_height="wrap_content">
        <ProgressBar
            android:id="@+id/load_more_progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/rotateprogress"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/load_more_progressBar"
            android:layout_marginLeft="15dp"
            android:id="@+id/billText"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="@string/outwardsync"/>
    </RelativeLayout>
</RelativeLayout>